# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/your_database_name

# JWT Configuration
JWT_SECRET=your_secret_key_here
JWT_EXPIRES_IN=7d

# PII Field Encryption (AES-256-GCM)
# 32-byte key encoded as base64 (preferred) or hex.
# Example generation:
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
PII_ENCRYPTION_KEY=

# Redis Cache Configuration (NEW - For Performance Optimization)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300

# Redis Rate Limiting (Token Bucket)
# If you want rate limiting but NOT caching, set: CACHE_ENABLED=false and RATE_LIMIT_ENABLED=true
RATE_LIMIT_ENABLED=true

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM_NAME=Event Management System

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# Supabase Postgres (Finance Ledger system-of-record)
# Get this from Supabase Dashboard → Project Settings → Database → Connection string (URI)
# Example: postgresql://postgres:<password>@db.<ref>.supabase.co:5432/postgres?sslmode=require
SUPABASE_DATABASE_URL=

# Optional (only needed if you also use Supabase API elsewhere)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
